%h1 Listing contacts

%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Sender email
      %th Receiver email
      %th Mobile no
      %th Message
      %th
      %th
      %th

  %tbody
    - @contacts.each do |contact|
      %tr
        %td= contact.first_name
        %td= contact.last_name
        %td= contact.sender_email
        %td= contact.receiver_email
        %td= contact.mobile_no
        %td= contact.message
        %td= link_to 'Show', contact
        %td= link_to 'Edit', edit_contact_path(contact)
        %td= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }

