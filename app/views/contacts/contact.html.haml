- if notice.present?
  .alert.alert-success.success_message #{t(:flash)[:success]}
.container-contact100
  .wrap-contact100
    .contact100-form
      %div.max_width
        = form_tag root_path, class: 'locale'  do
          = select_tag 'set_locale',                         |
            options_for_select(LANGUAGES, I18n.locale.to_s), |
            onchange: 'this.form.submit()'
      = form_with(url: contacts_path(@locale), method: "post", local: true, :class => "validate-form max_width" ) do
        %span.contact100-form-title.contact-title
          = t(:caption)[:message]
        %label.label-input100{:for => "first-name"} #{t(:labels)[:name]} *
        .div_flex
          .wrap-input100.rs1-wrap-input100.validate-input{"data-validate" => "Type first name"}
            %input#first-name.input100{:name => "first-name", :placeholder => "#{t(:placeholder)[:first_name]}", :type => "text"}/
            %span.focus-input100
          .wrap-input100.rs2-wrap-input100.validate-input{"data-validate" => "Type last name"}
            %input.input100{:name => "last-name", :placeholder => "#{t(:placeholder)[:last_name]}", :type => "text"}/
            %span.focus-input100
        %label.label-input100{:for => "email"} #{t(:labels)[:email]} *
        .wrap-input100.validate-input{"data-validate" => "Valid email is required: ex@abc.xyz"}
          %input#email.input100{:name => "email", :placeholder => "#{t(:placeholder)[:eg]}.#{t(:placeholder)[:example]}@email.com", :type => "text"}/
          %span.focus-input100
        %label.label-input100{:for => "phone"} #{t(:labels)[:email]}
        .wrap-input100
          %input#phone.input100{:name => "phone", :placeholder => "#{t(:placeholder)[:eg]}. +1 800 000000", :type => "text"}/
          %span.focus-input100
        %label.label-input100{:for => "message"} #{t(:labels)[:email]} *
        .wrap-input100.validate-input{"data-validate" => "Message is required"}
          %textarea#message.input100{:name => "message", :placeholder => t(:placeholder)[:message]}
          %span.focus-input100
        .container-contact100-form-btn
          %button.contact100-form-btn
            = t(:actions)[:send_message]
    .contact100-more.flex-col-c-m.back-image
      .flex-w.size1.p-b-47
        .txt1.p-r-25
          %span.lnr.lnr-map-marker
        .flex-col.size2
          %span.txt1.p-b-20
            = t(:labels)[:address]
          %span.txt2
            Mada Center 8th floor, 379 Hudson St, New York, NY 10018 US
      .dis-flex.size1.p-b-47
        .txt1.p-r-25
          %span.lnr.lnr-phone-handset
        .flex-col.size2
          %span.txt1.p-b-20
            = t(:labels)[:corporate_phone]
          %span.txt3
            +1 800 1236879
      .dis-flex.size1.p-b-47
        .txt1.p-r-25
          %span.lnr.lnr-envelope
        .flex-col.size2
          %span.txt1.p-b-20
            = t(:labels)[:support]
          %span.txt3
            contact@example.com
